# ============================================================================
# QEARIS Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!
#
# For Google Cloud Run deployment:
# Set GEMINI_API_KEY in Cloud Run environment variables or secrets
# ============================================================================

# Gemini API (Required)
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_api_key_here
GEMINI_PROJECT_ID=gen-lang-client-0472751146
GEMINI_PROJECT_NUMBER=412097861656
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# System Configuration
MAX_PARALLEL_AGENTS=4
VALIDATION_THRESHOLD=0.75
SYNTHESIS_ITERATIONS=3
AGENT_TIMEOUT=300

# Quantum Optimization
QUANTUM_TEMPERATURE=1.0
QUANTUM_ITERATIONS=100
COOLING_RATE=0.95

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# Memory Configuration
MEMORY_RETENTION_DAYS=30
MAX_MEMORY_ITEMS=1000
CONTEXT_WINDOW=100000

# MCP Configuration
MCP_TOOL_TIMEOUT=60
MCP_RETRY_ATTEMPTS=3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_RELOAD=false

# Observability
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true

# Deployment
ENVIRONMENT=production
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=qearis

# Optional: Additional APIs
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
